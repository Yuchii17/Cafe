<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | Zero Degree Café</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
  <script src="https://cdn.jsdelivr.net/npm/file-saver@2.0.5/dist/FileSaver.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
  <style>
    body { background-color: #f4f6fa; font-family: Arial, sans-serif; }

    .sidebar {
      height: 100vh;
      position: fixed;
      width: 250px;
      background: linear-gradient(145deg, #1d3c5a, #3a5f7d);
      color: white;
      padding-top: 30px;
      overflow-y: auto;
    }
    .sidebar h3 { text-align: center; font-size: 30px; margin-bottom: 30px; }
    .sidebar a {
      color: white; display: block; padding: 12px 18px;
      border-radius: 25px; font-size: 16px; margin: 10px 0; transition: 0.3s; text-decoration: none;
    }
    .sidebar a:hover { background-color: #f1f1f1; color: #1d3c5a; transform: translateX(10px); }
    .sidebar a.active { background-color: #3a5f7d; color: white; }
    .sidebar .logout { position: absolute; bottom: 20px; width: 100%; text-align: center; }

    .content { margin-left: 260px; padding: 30px; }
    .dashboard-header h1 { font-size: 28px; color: #1d3c5a; margin-bottom: 30px; }

    .kpi-card {
      border-radius: 20px; padding: 25px 20px; text-align: center;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      color: #fff; transition: all 0.3s;
      background: linear-gradient(145deg, #1d3c5a, #3a5f7d);
    }
    .kpi-card:hover { transform: translateY(-8px); box-shadow: 0 12px 25px rgba(0,0,0,0.25); }
    .kpi-card h6 { font-size: 14px; opacity: 0.9; }
    .kpi-card h4 { font-size: 22px; margin-top: 8px; }

    canvas { max-height: 400px; }
    .export-btns button { margin-right: 5px; }
    .card input[type="date"] { max-width: 160px; }
    .card button { min-width: 100px; }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="d-flex justify-content-center mb-3">
      <img src="/images/zicon.jpg" style="width:75px;" class="rounded-circle">
    </div>
    <h3 class="text-center fw-bold">Admin Panel</h3>
    <a href="/admin/index"><i class="bi bi-house-door"></i> Dashboard</a>
    <a href="/admin/sales" class="active"><i class="bi bi-bar-chart"></i> Sales Overview</a>
    <a href="/admin/users"><i class="bi bi-people"></i> Users</a>
    <a href="/admin/products"><i class="bi bi-box-seam"></i> Inventory</a>
    <a href="/admin/productMonitoring"><i class="bi bi-display"></i> Product Monitoring</a>
    <a href="/admin/orders"><i class="bi bi-receipt"></i> Orders</a>
    <a href="/admin/staff"><i class="bi bi-person-badge"></i> Staff</a>
    <a href="/admin/spoilage"><i class="bi bi-trash3"></i> Spoilage</a>
    <a href="/admin/reviews"><i class="bi bi-star"></i> Reviews</a>
    <div class="logout">
      <a href="/logout" class="btn btn-danger btn-sm mx-auto w-75"><i class="bi bi-box-arrow-right"></i> Logout</a>
    </div>
  </div>

  <div class="content">
    <div class="dashboard-header">
      <h1><i class="bi bi-graph-up"></i> Sales Overview</h1>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <div class="kpi-card">
          <h6><i class="bi bi-currency-exchange"></i> Total Sales</h6>
          <h4>₱<%= totalSales.toFixed(2) %></h4>
        </div>
      </div>
      <div class="col-md-3">
        <div class="kpi-card">
          <h6><i class="bi bi-calendar-event"></i> Best Day</h6>
          <h4><%= bestDay || 'N/A' %></h4>
        </div>
      </div>
      <div class="col-md-3">
        <div class="kpi-card">
          <h6><i class="bi bi-graph-down"></i> Avg Daily</h6>
          <h4>₱<%= avgDaily || 0 %></h4>
        </div>
      </div>
      <div class="col-md-3">
        <div class="kpi-card">
          <h6><i class="bi bi-receipt"></i> Total Orders</h6>
          <h4><%= totalOrders || 0 %></h4>
        </div>
      </div>
    </div>

    <ul class="nav nav-tabs" id="salesTab">
      <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#daily">Daily</button></li>
      <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#weekly">Weekly</button></li>
      <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#monthly">Monthly</button></li>
      <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#yearly">Yearly</button></li>
    </ul>

    <div class="tab-content mt-3">
      <div class="tab-pane fade show active" id="daily">
        <canvas id="dailyChart"></canvas>
      </div>
      <div class="tab-pane fade" id="weekly">
        <canvas id="weeklyChart"></canvas>
      </div>
      <div class="tab-pane fade" id="monthly">
        <canvas id="monthlyChart"></canvas>
      </div>
      <div class="tab-pane fade" id="yearly">
        <canvas id="yearlyChart"></canvas>
      </div>
    </div>

    <div class="card mt-4 p-3 shadow-sm">
      <h5 class="mb-3 text-center">Export Sales Report</h5>
      <div class="row justify-content-center align-items-end g-2">
        <div class="col-auto">
          <label for="startDate" class="form-label">Start Date</label>
          <input type="date" id="startDate" class="form-control" />
        </div>
        <div class="col-auto">
          <label for="endDate" class="form-label">End Date</label>
          <input type="date" id="endDate" class="form-control" />
        </div>
        <div class="col-auto d-flex flex-wrap gap-2">
          <button class="btn btn-success" onclick="exportCSV()"><i class="bi bi-file-earmark-spreadsheet"></i> CSV</button>
          <button class="btn btn-primary" onclick="exportExcel()"><i class="bi bi-file-earmark-excel"></i> Excel</button>
          <button class="btn btn-danger" onclick="printPDF()"><i class="bi bi-file-earmark-pdf"></i> PDF</button>
        </div>
      </div>
      <p class="text-muted text-center mt-2 mb-0">Leave date fields empty to export all-time sales.</p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const rawDailySales = <%- JSON.stringify(dailySales) %>;
    const weeklySales = <%- JSON.stringify(weeklySales) %>;
    const weeklyLabels = <%- JSON.stringify(weeklyLabels) %>;
    const monthlySales = <%- JSON.stringify(monthlySales) %>;
    const monthlyLabels = <%- JSON.stringify(monthlyLabels) %>;
    const yearlySales = <%- JSON.stringify(yearlySales) %>;
    const yearlyLabels = <%- JSON.stringify(yearlyLabels) %>;

    function getLast7DaysSales(sales) {
      const result = [];
      const today = new Date();
      for (let i = 6; i >= 0; i--) {
        const d = new Date(today);
        d.setDate(today.getDate() - i);
        const key = d.toISOString().split('T')[0];
        result.push(sales[key] || 0);
      }
      return result;
    }

    const last7DaysLabels = [...Array(7)].map((_, i) => {
      const d = new Date();
      d.setDate(d.getDate() - (6 - i));
      return d.toLocaleDateString('en-US', { weekday: 'short' });
    });

    const weeklyDailySales = getLast7DaysSales(rawDailySales);

    new Chart(document.getElementById('dailyChart').getContext('2d'), {
      type: 'line',
      data: {
        labels: last7DaysLabels,
        datasets: [{
          label: 'Daily Sales',
          data: weeklyDailySales,
          borderColor: '#1d3c5a',
          backgroundColor: 'rgba(58,95,125,0.4)',
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });

    new Chart(document.getElementById('weeklyChart').getContext('2d'), {
      type: 'line',
      data: {
        labels: weeklyLabels,
        datasets: [{
          label: 'Weekly Sales',
          data: weeklySales,
          borderColor: '#1d3c5a',
          backgroundColor: 'rgba(58,95,125,0.4)',
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });

    new Chart(document.getElementById('monthlyChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: monthlyLabels,
        datasets: [{
          label: 'Monthly Sales',
          data: monthlyLabels.map(l => monthlySales[l] || 0),
          backgroundColor: 'rgba(29,60,90,0.8)',
          borderColor: 'rgba(58,95,125,1)',
          borderWidth: 1,
          borderRadius: 8
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });

    new Chart(document.getElementById('yearlyChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: yearlyLabels,
        datasets: [{
          label: 'Yearly Sales',
          data: yearlyLabels.map(l => yearlySales[l] || 0),
          backgroundColor: 'rgba(29,60,90,0.8)',
          borderColor: 'rgba(58,95,125,1)',
          borderWidth: 1,
          borderRadius: 8
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: true } },
        scales: { y: { beginAtZero: true } }
      }
    });

    function exportCSV(){
      const start = document.getElementById('startDate').value;
      const end = document.getElementById('endDate').value;
      window.location.href = `/admin/sales/export/csv?start=${start || ''}&end=${end || ''}`;
    }

    function printPDF(){
      const start = document.getElementById('startDate').value;
      const end = document.getElementById('endDate').value;
      window.open(`/admin/sales/export/pdf?start=${start || ''}&end=${end || ''}`, '_blank');
    }

    function exportExcel(){
      const start = document.getElementById('startDate').value;
      const end = document.getElementById('endDate').value;
      window.location.href = `/admin/sales/export/excel?start=${start || ''}&end=${end || ''}`;
    }
  </script>
</body>
</html>
