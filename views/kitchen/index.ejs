<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Kitchen Dashboard | Zero Degree Caf√©</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f4f7fb;
      font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      background: linear-gradient(145deg, #102d52, #1d3c5a);
      color: white;
      padding-top: 30px;
      overflow-y: auto;
      box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.15);
    }

    .sidebar h3 {
      text-align: center;
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 30px;
      color: #fff;
    }

    .sidebar a {
      color: #ffffff;
      text-decoration: none;
      padding: 12px 20px;
      display: block;
      border-radius: 30px;
      font-size: 16px;
      margin: 8px 18px;
      transition: all 0.3s ease;
    }

    .sidebar a:hover {
      background-color: rgba(255, 255, 255, 0.15);
      color: #ffffff;
      transform: translateX(8px);
    }

    .sidebar a.active {
      background-color: #0d6efd;
      font-weight: 600;
    }

    .sidebar .logout {
      position: absolute;
      bottom: 20px;
      width: 100%;
      text-align: center;
    }

    .content {
      margin-left: 270px;
      padding: 30px;
    }

    h1, h5, p {
      color: #1d3c5a;
    }

    .card {
      border-radius: 16px;
      overflow: hidden;
    }

    .card-title {
      font-size: 20px;
      font-weight: 600;
    }

    .text-bg-warning {
      background: linear-gradient(to right, #ffc107, #ffca2c);
      color: #1d1d1d;
    }

    .text-bg-info {
      background: linear-gradient(to right, #0dcaf0, #31d2f2);
      color: #00354d;
    }

    .btn-danger {
      background-color: #dc3545;
      border: none;
      border-radius: 30px;
      font-weight: bold;
    }

    .btn-danger:hover {
      background-color: #bb2d3b;
    }

    canvas {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 10px;
    }
  </style>
</head>
<body>

  <div class="sidebar">
    <div class="d-flex justify-content-center mb-3">
      <img src="/images/zicon.jpg" style="width: 75px;" class="rounded-circle" alt="Logo" />
    </div>
    <h3>Kitchen Panel</h3>
    <a href="/kitchen/index" class="active"><i class="bi bi-house-door"></i> Dashboard</a>
    <a href="/kitchen/orders"><i class="bi bi-file-earmark-text"></i> Orders</a>
    <div class="logout">
      <a href="/logout" style="width: 150px;" class="btn btn-danger btn-sm mx-auto">
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>
    </div>
  </div>

  <main class="content">
    <h1 class="mb-4">Welcome to the Kitchen Dashboard!</h1>
    <p class="mb-5">Manage orders and track kitchen tasks here.</p>

    <div class="row g-4 mb-5">
      <div class="col-md-6">
        <div class="card text-bg-warning shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-hourglass-split"></i> Pending Orders</h5>
            <p class="display-5 fw-bold"><%= pendingCount %></p>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card text-bg-info shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title"><i class="bi bi-gear-wide-connected"></i> Processing Orders</h5>
            <p class="display-5 fw-bold"><%= processingCount %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-sm" style="background-color: #ffffff;">
      <div class="card-body">
        <h5 class="card-title text-center">Kitchen Orders</h5>
        <canvas id="ordersChart" height="100"></canvas>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    const ctx = document.getElementById('ordersChart').getContext('2d');
    const ordersChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Pending', 'Processing'],
        datasets: [{
          label: 'Order Status',
          data: [<%= pendingCount %>, <%= processingCount %>],
          borderColor: '#0b5ed7',
          backgroundColor: 'rgba(13, 110, 253, 0.3)',
          tension: 0.4,
          fill: true,
          pointRadius: 6,
          pointBackgroundColor: '#0d6efd',
          pointHoverRadius: 8
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true,
            precision: 0
          }
        },
        plugins: {
          legend: {
            display: false
          }
        }
      }
    });
  </script>

</body>
</html>
