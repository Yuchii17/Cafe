<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Kitchen Orders | Kitchen</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
    rel="stylesheet"
  />
  <style>
    body {
      background-color: #f4f7fb;
      font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      background: linear-gradient(145deg, #102d52, #1d3c5a);
      color: white;
      padding-top: 30px;
      overflow-y: auto;
      box-shadow: 4px 0px 10px rgba(0, 0, 0, 0.15);
    }

    .sidebar h3 {
      text-align: center;
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 30px;
      color: #fff;
    }

    .sidebar a {
      color: #ffffff;
      text-decoration: none;
      padding: 12px 20px;
      display: block;
      border-radius: 30px;
      font-size: 16px;
      margin: 8px 18px;
      transition: all 0.3s ease;
    }

    .sidebar a:hover {
      background-color: rgba(255, 255, 255, 0.15);
      color: #ffffff;
      transform: translateX(8px);
    }

    .sidebar a.active {
      background-color: #0d6efd;
      font-weight: 600;
    }

    .sidebar .logout {
      position: absolute;
      bottom: 20px;
      width: 100%;
      text-align: center;
    }

    .content {
      margin-left: 270px;
      padding: 30px;
    }

    .btn-danger {
      background-color: #dc3545;
      border: none;
      border-radius: 30px;
      font-weight: bold;
    }

    .btn-danger:hover {
      background-color: #bb2d3b;
    }

    canvas {
      background-color: #ffffff;
      border-radius: 12px;
      padding: 10px;
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="d-flex justify-content-center mb-3">
      <img
        src="/images/zicon.jpg"
        style="width: 75px"
        class="rounded-circle"
        alt="Logo"
      />
    </div>
    <h3>Kitchen Panel</h3>
    <a href="/kitchen/index"><i class="bi bi-house-door"></i> Dashboard</a>
    <a href="/kitchen/orders" class="active"
      ><i class="bi bi-file-earmark-text"></i> Orders</a
    >
    <div class="logout">
      <a
        href="/logout"
        style="width: 150px"
        class="btn btn-danger btn-sm mx-auto"
      >
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>
    </div>
  </div>

  <div class="content">
    <h2 class="mb-4 fw-bold text-center">Recent Orders</h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-success">
          <tr>
            <th>Order ID</th>
            <th>Products</th>
            <th>Quantities</th>
            <th>Time</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% 
            // Combine only processing and completed orders for display
            const filteredOrders = [...processingOrders, ...completedOrders]; 
          %>
          <% if (filteredOrders.length > 0) { %>
            <% filteredOrders.forEach(order => { %>
              <tr>
                <td><%= order._id %></td>
                <td>
                  <ul class="mb-0 p-0" style="list-style:none;">
                    <% order.items.forEach(item => { %>
                      <% if (item.productId) { %>
                        <li class="d-flex align-items-center gap-2 mb-1">
                          <a href="<%= item.productId.productImage %>" target="_blank" rel="noopener noreferrer">
                            <img
                              src="<%= item.productId.productImage %>"
                              alt="<%= item.productId.name %>"
                              style="
                                width: 40px;
                                height: 40px;
                                object-fit: cover;
                                border-radius: 5px;
                                cursor: pointer;
                              "
                            />
                          </a>
                          <span><%= item.productId.name %></span>
                        </li>
                      <% } else { %>
                        <li class="text-danger">Product not found</li>
                      <% } %>
                    <% }) %>
                  </ul>
                </td>

                <td>
                  <ul class="mb-0 p-0" style="list-style:none;">
                    <% order.items.forEach(item => { %>
                      <li><%= item.quantity %></li>
                    <% }) %>
                  </ul>
                </td>

                <td><%= order.createdAt.toLocaleString() %></td>

                <td>
                  <% if (order.status === 'Processing') { %>
                    <span class="badge bg-primary">Processing</span>
                  <% } else if (order.status === 'Completed') { %>
                    <span class="badge bg-success">Completed</span>
                  <% } %>
                </td>

                <td>
                  <% if (order.status === 'Processing') { %>
                  <form
                    class="done-form"
                    action="/kitchen/orders/<%= order._id %>/complete"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-sm btn-success">
                      Done
                    </button>
                  </form>
                  <% } else { %>
                    <span class="text-muted">â€”</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No orders available.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
<div
  class="modal fade"
  id="imageModal"
  tabindex="-1"
  aria-labelledby="imageModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-body p-0">
        <img id="modalImage" src="" alt="Full Image" class="img-fluid w-100" />
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    // Confirmation for completing
    document.querySelectorAll('.done-form').forEach((form) => {
      form.addEventListener('submit', function (e) {
        e.preventDefault();
        Swal.fire({
          title: 'Are you sure?',
          text: 'Mark this order as Completed?',
          icon: 'success',
          showCancelButton: true,
          confirmButtonColor: '#28a745',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, complete it!'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      });
    });
  </script>
  <script>
  document.querySelectorAll('.clickable-image').forEach((img) => {
    img.addEventListener('click', () => {
      const fullSrc = img.getAttribute('data-fullsrc');
      const modalImage = document.getElementById('modalImage');
      modalImage.src = fullSrc;
    });
  });
</script>
</body>
</html>
